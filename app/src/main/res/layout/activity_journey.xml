            android:layout_marginTop="@dimen/margin_btns"/>

        <include android:id="@+id/level2"
            layout="@layout/button_journey_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_btns"/>

        <include android:id="@+id/level1"
            layout="@layout/button_journey_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_btns"/>

