<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_balancing_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.meditatetoregenerate.metime.org.meditation.metime.Info_Balancing"
    android:background="@drawable/bg_balancing">
    <!--tools:showIn="@layout/activity_journey_info"-->

<androidx.viewpager.widget.ViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<ImageView
    android:layout_above="@+id/layoutDots"
    android:layout_centerHorizontal="true"
    android:layout_width="@dimen/img_width_height"
    android:layout_height="@dimen/img_width_height"
    android:layout_marginBottom="40dp"
    android:src="@drawable/icn_balancing_green" />

<LinearLayout
    android:id="@+id/layoutDots"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dots_height"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/dots_margin_bottom"
    android:gravity="center"
    android:orientation="horizontal"></LinearLayout>

<Button
    android:id="@+id/btn_next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:background="@null"
    android:text="@string/next"
    android:textColor="@color/element_active_balancing" />

<Button
    android:id="@+id/btn_skip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:background="@null"
    android:text="@string/skip"
    android:textColor="@color/element_active_balancing" />

</RelativeLayout>