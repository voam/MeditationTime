<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_balancing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.meditatetoregenerate.metime.org.meditation.metime.Balancing"
    android:background="@drawable/bg_balancing">

    <ImageButton
        android:id="@+id/information"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icn_info_balancinggreen"
        android:layout_marginEnd="9dp"
        android:layout_alignParentEnd="true" />

    <include android:id="@+id/Water_btn"
        layout="@layout/button_balancing_element"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"/>

    <include android:id="@+id/Fire_btn"
        layout="@layout/button_balancing_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Water_btn"
        android:layout_alignStart="@+id/Water_btn"
        android:layout_below="@+id/Water_btn"
        android:layout_marginTop="16dp"/>

    <include android:id="@+id/Air_btn"
        layout="@layout/button_balancing_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Fire_btn"
        android:layout_alignStart="@+id/Fire_btn"
        android:layout_below="@+id/Fire_btn"
        android:layout_marginTop="16dp"/>

    <include android:id="@+id/Earth_btn"
        layout="@layout/button_balancing_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Air_btn"
        android:layout_alignStart="@+id/Air_btn"
        android:layout_below="@+id/Air_btn"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
